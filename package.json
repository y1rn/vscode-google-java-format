{
  "name": "java-format",
  "displayName": "Java format service",
  "description": "Java format service with google-java-format",
  "version": "0.2.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "license": "SEE LICENSE IN LICENSE",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Google Java Format",
        "properties": {
          "google-java-format.style": {
            "title": "The style name of google java format",
            "type": "string",
            "default": "GOOGLE",
            "enum": [
              "GOOGLE",
              "AOSP"
            ],
            "enumDescriptions": [
              "Google Style",
              "AOSP Style (4-space indentation)"
            ]
          },
          "google-java-format.skipSortingImports": {
            "title": "Whether to fix the import order, but unused imports will still be removed",
            "type": "boolean",
            "default": false,
            "description": "Do not fix the import order. Unused imports will still be removed"
          },
          "google-java-format.skipRemovingUnusedImports": {
            "title": "Whether to remove unused imports. Imports will still be sorted",
            "type": "boolean",
            "default": false,
            "description": "Whether to remove unused imports. Imports will still be sorted"
          }
        }
      }
    ],
    "languages": [
      {
        "id": "java",
        "extensions": [
          "java"
        ]
      }
    ]
  },
  "repository": {
    "url": "https://github.com/y1rn/vscode-google-java-format"
  },
  "publisher": "y1rn",
  "scripts": {
    "exe": "mvn -Pnative clean package -Dexeout=dist -Djarout=dist -f ./java-format-service/pom.xml && upx dist/java-format-service",
    "jar": "mvn clean package -Djarout=dist -f ./java-format-service/pom.xml",
    "vscode:prepublish": "npm run package && npm run jar",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "npm run test-compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/node-fetch": "^2.5.8",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "vscode-jsonrpc": "^8.1.0",
    "eslint": "7.32",
    "glob": "^7.1.6",
    "mocha": "^10.2.0",
    "node-fetch": "^2.6.1",
    "ts-loader": "^9.2.7",
    "typescript": "^5.2.2",
    "vscode-test": "^1.5.0",
    "webpack": "^5.26.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "ts-node": "^10.9.1"
  }
}
